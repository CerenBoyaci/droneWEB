@model droneWEB.WebUI.Models.YetkiViewModel

<h2>Kullanıcıya Yetki Ata</h2>

<form asp-action="YetkiAta" method="post">
    <div>
        <label>Kullanıcı Seç:</label>
        <select asp-for="KullaniciId" asp-items="Model.KullaniciSecenekleri">
            <option value="">Seçiniz</option>
        </select>
    </div>

    <div>
        <label>Rol Seç (Ctrl ile çoklu seçilebilir):</label>
        <select asp-for="RolIdListesi" asp-items="Model.RolSecenekleri" multiple="multiple">
        </select>
    </div>

    <button type="submit">Yetki Ata</button>
</form>


