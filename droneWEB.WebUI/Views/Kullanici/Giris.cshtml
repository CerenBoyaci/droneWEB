@model droneWEB.WebUI.Models.GirisViewModel
@{
    Layout = "_LayoutKullanici";
    ViewData["Title"] = "Giriş Yap";
}


    

    <div >
    <link href="https://fonts.googleapis.com/css2?family=Russo+One&display=swap" rel="stylesheet">


    @if (ViewData.ModelState.Values.SelectMany(v => v.Errors).Any())
    {
        <div class="alert alert-danger">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <div>@error.ErrorMessage</div>
            }
        </div>
    }

    <form asp-action="Giris" method="post"
          style="background-color:#25254A; padding:30px; border-radius:15px; box-shadow:0 0 20px rgba(0,212,255,0.6); border:2px solid #00d4ff; backdrop-filter: blur(8px);">

        <div class="row mb-3 align-items-center">
            <label for="inputEmail" class="col-sm-3 col-form-label">Eposta</label>
            <div class="col-sm-9">
                <input asp-for="Eposta" class="form-control" id="inputEmail"  />
            </div>
        </div>

        <div class="row mb-3 align-items-center">
            <label for="inputPassword" class="col-sm-3 col-form-label">Şifre</label>
            <div class="col-sm-9">
                <input asp-for="Sifre" type="password" class="form-control" id="inputPassword"  />
            </div>
        </div>

        <div class="text-center">
            <button type="submit" class="neon-btn w-50" style="padding:8px 20px; font-size:16px;">Giriş Yap</button>
        </div>


        <div class="text-center mt-3">
            <a href="@Url.Action("Kayit", "Kullanici")"
               style="color:#ffffff;
                  text-decoration:none;
                  font-weight:bold;
                  text-shadow: 0 0 5px #00d4ff, 0 0 10px #00d4ff, 0 0 20px #00d4ff, 0 0 30px #00d4ff;">
                Kayıt Ol
            </a>
        </div>
    </form>






