@model droneWEB.WebUI.Models.GirisViewModel
@using droneWEB.WebUI.Helpers
@{
    Layout = "_LayoutKullanici";
    ViewData["Title"] = "Giriş Yap";
}

<div>
    @if (ViewData.ModelState.Values.SelectMany(v => v.Errors).Any())
    {
        <div class="alert alert-danger">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <div>@error.ErrorMessage</div>
            }
        </div>
    }

    <form asp-action="Giris" method="post">
        <div class="row mb-3">
            <label for="inputEmail" class="col-sm-3 col-form-label">Eposta</label>
            <div class="col-sm-9">
                <input asp-for="Eposta" class="form-control" id="inputEmail" />
            </div>
        </div>

        <div class="row mb-3">
            <label for="inputPassword" class="col-sm-3 col-form-label">Şifre</label>
            <div class="col-sm-9">
                <input asp-for="Sifre" type="password" class="form-control" id="inputPassword" />
            </div>
        </div>

        <div>
            @Html.RenderCaptcha("CaptchaInput")
        </div>

        <div class="text-center mt-3">
            <button type="submit" class="btn btn-primary w-50">Giriş Yap</button>
        </div>

        <div class="text-center mt-3">
            <a href="@Url.Action("Kayit", "Kullanici")">Kayıt Ol</a>
        </div>
    </form>
</div>
