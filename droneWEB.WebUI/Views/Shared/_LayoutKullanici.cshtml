<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - droneWEB.WebUI</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/droneWEB.WebUI.styles.css" asp-append-version="true" />

    <link href="https://fonts.googleapis.com/css2?family=Russo+One&display=swap" rel="stylesheet">

    <style>
        html, body {
            height: 100%;
            margin: 0;
            overflow: hidden;
            background-color: #0b1220;
            color: #fff;
            font-family: 'Russo One', sans-serif;
        }

        /* Yıldızlı arka plan */
        #starfield {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 0;
        }

        .cover-container {
            max-width: 100%;
            position: relative;
            z-index: 1;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            padding: 20px;
        }

        @@keyframes fadeInDown {
            0% {
                opacity: 0;
                transform: translateY(-30px);
            }

            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .neon-title {
            font-size: clamp(60px, 10vw, 80px);
            color: #ffffff;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            text-align: center;
            text-shadow: 0 0 2px #00d4ff, 0 0 4px rgba(0, 212, 255, 0.6);
            margin: 10px 0;
            opacity: 0;
            animation: fadeInDown 1.5s ease 0.5s forwards;
        }

        .neon-logo {
            width: 300px;
            filter: drop-shadow(0 0 2px #00d4ff) drop-shadow(0 0 4px rgba(0, 212, 255, 0.6));
            margin-bottom: 20px;
            transition: transform 0.3s;
            opacity: 0;
            animation: fadeInDown 1.5s ease forwards;
        }

            .neon-logo:hover {
                transform: scale(1.05);
            }

        .site-footer {
            color: rgba(255,255,255,0.6);
            position: relative;
            z-index: 1;
            text-align: center;
            margin-top: 20px;
        }

        .top-right-buttons {
            position: absolute;
            top: 20px;
            right: 20px;
            z-index: 2;
        }

            .top-right-buttons a {
                font-size: 16px;
                color: #ffffff;
                text-decoration: none;
                margin-left: 10px;
                padding: 8px 16px;
                border: 2px solid #00d4ff;
                border-radius: 6px;
                background: rgba(0, 0, 0, 0.2);
                transition: all 0.3s ease-in-out;
            }

                .top-right-buttons a:hover {
                    background: rgba(0, 212, 255, 0.2);
                    box-shadow: 0 0 10px #00d4ff, 0 0 20px #0077ff;
                    color: #fff;
                }

        /* Form şeffaf ve neon kenarlıklı, ışık azaltıldı */
        form {
            background: rgba(0, 0, 0, 0.0);
            border: 2px solid #00d4ff;
            border-radius: 25px;
            padding: 30px;
            box-shadow: 0 0 5px #00d4ff, 0 0 10px rgba(0, 212, 255, 0.2);
            width: 100%;
            max-width: 450px;
            transition: all 0.3s ease;
        }

            form:hover {
                box-shadow: 0 0 8px #00d4ff, 0 0 15px rgba(0, 212, 255, 0.3);
            }

            form .form-control {
                background: transparent;
                border: 1px solid rgba(0,212,255,0.3);
                color: #fff;
            }

                form .form-control:focus {
                    background: rgba(255,255,255,0.05);
                    border-color: #00d4ff;
                    color: #fff;
                    box-shadow: 0 0 5px #00d4ff;
                }

            form .form-label {
                color: #fff;
            }

        .btn-primary {
            background-color: #00d4ff;
            border: none;
            color: #000;
            font-weight: bold;
            width: 100%;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                box-shadow: 0 0 10px #00d4ff, 0 0 20px #0077ff;
                transform: scale(1.05);
                color: #fff;
            }

    </style>

    @RenderSection("Styles", required: false)
</head>
<body>

    <!-- Yıldızlı arka plan -->
    <canvas id="starfield"></canvas>

    <div class="top-right-buttons">
        <a href="/Kullanici/Kayit">Kayıt Ol</a>
        <a href="/Kullanici/Giris">Giriş Yap</a>
    </div>

    <div class="cover-container">
        @RenderBody()
    </div>

    <footer class="site-footer">
        &copy; @DateTime.Now.Year DroneVision
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        const canvas = document.getElementById("starfield");
        const ctx = canvas.getContext("2d");
        let stars = [];
        let numStars = 10; // yıldız yoğunluğu

        function resizeCanvas() {
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
        }

        window.addEventListener("resize", resizeCanvas);
        resizeCanvas();

        function initStars() {
            stars = [];
            for (let i = 0; i < numStars; i++) {
                stars.push({
                    x: Math.random() * canvas.width,
                    y: Math.random() * canvas.height,
                    size: Math.random() * 2,
                    speed: 0.2 + Math.random() * 0.5
                });
            }
        }

        function animateStars() {
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            ctx.fillStyle = "#fff";
            for (let star of stars) {
                ctx.beginPath();
                ctx.arc(star.x, star.y, star.size, 0, 2 * Math.PI);
                ctx.fill();

                star.y += star.speed;
                if (star.y > canvas.height) {
                    star.y = 0;
                    star.x = Math.random() * canvas.width;
                }
            }
            requestAnimationFrame(animateStars);
        }

        initStars();
        animateStars();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
