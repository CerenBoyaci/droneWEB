<!-- File: Views/Shared/_Layout.cshtml -->
@*
  Bootstrap Cover layout entegre edilmiş mevcut layout üzerine.
*@
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - droneWEB.WebUI</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/droneWEB.WebUI.styles.css" asp-append-version="true" />

    <style>
        /* Cover style */
        html, body {
            height: 100%;
        }

        body {
            display: flex;
            align-items: center;
            padding-top: 40px;
            padding-bottom: 40px;
            background-color: #0b1220;
            color: #fff;
        }

        .cover-container {
            max-width: 42em;
        }

        .bg-cover {
            background-image: url('/images/cover-bg.jpg'); /* değiştir */
            background-size: cover;
            background-position: center;
            border-radius: .5rem;
            padding: 3rem;
        }

        .nav-masthead .nav-link {
            color: rgba(255,255,255,0.9);
        }

        .site-footer {
            color: rgba(255,255,255,0.6);
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
       
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            <div class="cover-container mx-auto bg-cover shadow-lg">
                @RenderBody()
            </div>
        </main>
    </div>

    <footer class="mt-4 site-footer text-center">
       
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


